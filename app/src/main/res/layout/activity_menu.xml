<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.luanp.birl.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Treino do Dia:"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Não há treino configurado para hoje"
            android:textSize="15dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fadeScrollbars="false"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerInside"
                        android:background="@null"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/treino_dia" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="37dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:text="Iniciar Treino do Dia" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/outro_treino" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="37dp"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:text="Iniciar Outro Treino" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/bt_exercicio"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/exercicio" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="37dp"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:text="Iniciar um Exercício" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/config" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="37dp"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:text="Configurar Treinos" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/sair" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="37dp"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:text="Sair do Aplicativo" />

                </LinearLayout>

            </LinearLayout>


        </HorizontalScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
